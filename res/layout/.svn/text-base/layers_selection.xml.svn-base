<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="wrap_content"
	android:layout_height="?android:attr/listPreferredItemHeight"
	android:background="@drawable/background">
	<!-- android:background="@drawable/listitem_selector"> -->

	<ImageView android:id="@+id/icon" android:layout_width="48dip"
		android:layout_height="48dip" android:layout_gravity="left"
		android:layout_marginRight="20px" />
	<TextView android:id="@+id/text" android:layout_gravity="center_vertical"
		android:textSize="20sp" android:layout_width="0dip"
		android:layout_weight="2.0" android:layout_height="wrap_content"
		android:textColor="@drawable/red" android:typeface="monospace" />
	<CheckBox android:id="@+id/checkbox" android:layout_gravity="right"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />

</LinearLayout>

