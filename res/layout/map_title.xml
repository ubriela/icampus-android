<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="35dip" android:gravity="center_vertical"
	android:paddingLeft="5dip" android:background="#7700ff00">

	<ImageView android:id="@+id/map_title_icon" android:src="@drawable/social_network"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />

	<TextView android:id="@+id/map_title" android:layout_width="wrap_content"
		android:text="@string/app_name" android:paddingLeft="5dip"
		android:textColor="@drawable/white" android:layout_height="wrap_content"
		android:capitalize="characters" android:textStyle="bold" />

	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_weight="1"
		android:gravity="right|center_vertical" android:paddingRight="5dip">

		<ImageView android:id="@+id/map_title_search" android:src="@drawable/map_title_search_64"
			android:gravity="right" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>
</LinearLayout>
